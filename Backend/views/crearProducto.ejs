<html lang="en">
  <head>
    <%- include('../views/partials/head.ejs') %>
    <link
      rel="stylesheet"
      href="/stylesheets/crearReceta.css"
      type="text/css"
    />
  </head>

  <body>
    <%- include('../views/partials/navbar.ejs') %>

    <h1>Ingresa los datos</h1>
    <form action="/admin/crearProducto" method="post">
      <div>
        <label for="nombre">Nombre:</label>
        <input type="text" id="nombre" name="nombre" required />
      </div>
      <div>
        <label for="cantPersonas">Cantidad de personas:</label>
        <input type="number" id="cantPersonas" name="cantPersonas" required />
      </div>
      <div>
        <label for="cantRecetas">Cantidad de recetas:</label>
        <input type="number" id="cantRecetas" name="cantRecetas" required />
      </div>
      <div>
        <label for="precio">Precio final:</label>
        <input type="number" id="precio" name="precio" required />
      </div>
      <button type="submit">Enviar</button>
    </form>
  </body>
</html>
