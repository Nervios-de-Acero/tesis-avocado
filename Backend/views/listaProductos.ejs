<!DOCTYPE html>
<html>
<head>
    <title>Lista de Productos</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        table, th, td {
            border: 1px solid #ddd;
        }
        th, td {
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        .btn {
            background-color: #333;
            color: white;
            padding: 6px 10px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            border-radius: 4px;
            margin: 3px;
        }
        .btn:hover {
            background-color: #ddd;
            color: black;
        }

    </style>
</head>
<body>
    <%- include('../views/partials/navbar.ejs') %>
    <h1>Lista de Productos</h1>
    <a class="btn" href="/panel/crearProducto">Agregar Nuevo</a>
    <table>
        <tr>
            <th>Nombre</th>
            <th>Cantidad de personas</th>
            <th>Cantidad de recetas</th>
            <th>Precio</th>
            <th>Acciones</th>
        </tr>
        <% data.forEach(function(item) { %>
            <tr>
                <td><%= item.nombre %></td>
                <td><%= item.cantPersonas %></td>
                <td><%= item.cantRecetas %></td>
                <td><%= item.precio %></td>
                <td>
                    <a class="btn" href="/panel/editarProducto?id=<%= item.idProducto %>">Editar</a>
                    <a class="btn" href="/admin/eliminarProducto/<%= item.idProducto %>">Eliminar</a>
                </td>
            </tr>
        <% }); %>
    </table>
</body>
</html>